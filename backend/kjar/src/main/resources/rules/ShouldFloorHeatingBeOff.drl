package rules

import com.ftn.sbnz.model.Home
import com.ftn.sbnz.model.FloorHeater

rule "should the floor heater be off"
    when
        $home: Home(consumptionProfile != consumptionProfile.COMING_HOME && numberOfPresentResidents == 0)
        $floorHeater: FloorHeater()
    then
        modify($floorHeater){setOn(false)}
end
